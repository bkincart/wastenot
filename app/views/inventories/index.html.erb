<% if params[:user_id] == nil %>

  <% if @inventories.blank? %>
    <h4>There are no recipes containing the term <%= params[:search] %>.</h4>

  <% else %>

    <h1>Available Inventory</h1>
    <% @inventories.each do |inventory| %>
      <% if inventory.active && inventory.available %>
        <div class='row inventory-tile-container align-center'>
          <div class="small-10 small-centered columns inventory-tile">
            <a href="/inventories/<%= inventory.id %>" class='black-text'>
              <div class='available-status'> Available </div>
              <div class='tile-text'>
                <h2> <%= inventory.item %> </h2>
                <p> Quantity: <%= inventory.quantity %> </p>
                <% if inventory.measurement %>
                  <p> Measurement: <%= inventory.measurement %> </p>
                <% end %>
                <p> <%= inventory.user.name %> </p>
              </div>
            </a>
          </div>
        </div>
      <% end %>
    <% end %>

    <h1> Claimed Inventory (Unavailable) </h1>
    <% @inventories.each do |inventory| %>
      <% if inventory.active && !inventory.available%>
        <div class='row inventory-tile-container align-center'>
          <div class="small-10 small-centered columns inventory-tile">
            <a href="/inventories/<%= inventory.id %>" class='black-text'>
              <div class='claimed-status'> Claimed </div>
              <div class='tile-text'>
                <h2> <%= inventory.item %> </h2>
                <p> Quantity: <%= inventory.quantity %> </p>
                <% if inventory.measurement %>
                  <p> Measurement: <%= inventory.measurement %> </p>
                <% end %>
                <p> <%= inventory.user.name %> </p>
              </div>
            </a>
          </div>
        </div>
      <% end %>
    <% end %>

    <h1> Past Inventory (Unavailable) </h1>
    <% @inventories.each do |inventory| %>
      <% if !inventory.active %>
        <div class='row inventory-tile-container align-center'>
          <div class="small-10 small-centered columns inventory-tile">
            <a href="/inventories/<%= inventory.id %>" class='black-text'>
              <div class='expired-status'> Expired </div>
              <div class='tile-text'>
                                <h2> <%= inventory.item %> </h2>
                <p> Quantity: <%= inventory.quantity %> </p>
                <% if inventory.measurement %>
                  <p> Measurement: <%= inventory.measurement %> </p>
                <% end %>
                <p> <%= inventory.user.name %> </p>
              </div>
            </a>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<div id='app' />
